{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "watch": true,
        "noEmitOnError": true,
        "lib": ["es2015", "dom"]
    },
    "exclude": [
        "**/node_modules/*",
        "**/lib/typings/*",
        "**/*.d.ts"
    ]
}